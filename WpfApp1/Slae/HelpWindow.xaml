<Window x:Class="WpfApp1.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка по импорту данных" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

	<Window.Resources>
		<Style x:Key="TitleStyle" TargetType="TextBlock">
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="#2C5F9E"/>
			<Setter Property="Margin" Value="0,20,0,10"/>
		</Style>

		<Style x:Key="SubtitleStyle" TargetType="TextBlock">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Foreground" Value="#2C5F9E"/>
			<Setter Property="Margin" Value="0,15,0,5"/>
		</Style>

		<Style x:Key="TextStyle" TargetType="TextBlock">
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="Margin" Value="0,5,0,5"/>
		</Style>

		<Style x:Key="CodeStyle" TargetType="TextBlock">
			<Setter Property="FontFamily" Value="Consolas"/>
			<Setter Property="FontSize" Value="11"/>
			<Setter Property="Background" Value="#F5F5F5"/>
			<Setter Property="Padding" Value="10"/>
			<Setter Property="Margin" Value="0,5,0,10"/>
		</Style>
	</Window.Resources>

	<Grid Margin="20">
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<StackPanel>
				<TextBlock Text="Справка по импорту данных из Excel/Google Tables" 
                          Style="{StaticResource TitleStyle}"/>

				<!-- Общая информация -->
				<TextBlock Text="Общая информация" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="Приложение поддерживает импорт данных из Excel и Google Tables через CSV формат. Это универсальный способ, который работает с обеими системами."
                          Style="{StaticResource TextStyle}"/>

				<!-- Способ 1: Импорт из Excel -->
				<TextBlock Text="1. Импорт из Microsoft Excel" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="Для импорта данных из Excel файла (.xlsx, .xls):" Style="{StaticResource TextStyle}"/>

				<TextBlock Text="Шаг 1: Подготовка данных в Excel" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="Расположите данные в следующем формате:" Style="{StaticResource TextStyle}"/>

				<TextBlock Text="Матрица A
1,2,3
4,5,6
7,8,9

Вектор B
10
11
12" Style="{StaticResource CodeStyle}"/>

				<TextBlock Text="Шаг 2: Сохранение в CSV" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="В Excel: Файл → Сохранить как → Выберите 'CSV (разделители - запятые)' → Сохранить" 
                          Style="{StaticResource TextStyle}"/>

				<TextBlock Text="Шаг 3: Импорт в приложение" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="В приложении: Файл → Импорт данных → Из Excel → Выберите CSV файл" 
                          Style="{StaticResource TextStyle}"/>

				<!-- Способ 2: Импорт из Google Tables -->
				<TextBlock Text="2. Импорт из Google Tables" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="Шаг 1: Подготовка данных в Google Tables" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="Расположите данные в том же формате, что и для Excel." Style="{StaticResource TextStyle}"/>

				<TextBlock Text="Шаг 2: Экспорт в CSV" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="В Google Tables: Файл → Скачать → CSV" Style="{StaticResource TextStyle}"/>

				<TextBlock Text="Шаг 3: Импорт в приложение" Style="{StaticResource TextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="В приложении: Файл → Импорт данных → Из Google Tables → Выберите CSV файл" 
                          Style="{StaticResource TextStyle}"/>

				<!-- Форматы файлов -->
				<TextBlock Text="Форматы данных" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="Поддерживаемые форматы файлов:" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• CSV (рекомендуемый) - разделитель запятая" Style="{StaticResource TextStyle}" Margin="20,0,0,0"/>
				<TextBlock Text="• TXT - данные в том же формате" Style="{StaticResource TextStyle}" Margin="20,0,0,0"/>

				<!-- Требования к данным -->
				<TextBlock Text="Требования к данным" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="• Матрица A должна быть квадратной (N×N)" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Размер матрицы: от 2×2 до 50×50" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Вектор B должен иметь тот же размер N" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Разделитель - запятая" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Поддерживаются целые и дробные числа" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Формат чисел: 1, 2.5, -3.14, 0.001" Style="{StaticResource TextStyle}"/>

				<!-- Пример файла -->
				<TextBlock Text="Пример полного файла" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="Для системы 3×3:" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="Матрица A
2,1,-1
-3,-1,2
-2,1,2

Вектор B
8
-11
-3" Style="{StaticResource CodeStyle}"/>

				<!-- Советы -->
				<TextBlock Text="Советы" Style="{StaticResource SubtitleStyle}"/>
				<TextBlock Text="• Сохраняйте файлы в кодировке UTF-8" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Не изменяйте названия секций 'Матрица A' и 'Вектор B'" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Для больших матриц (N > 15) импорт может занять несколько секунд" Style="{StaticResource TextStyle}"/>
				<TextBlock Text="• Проверяйте, что количество строк матрицы A совпадает с количеством элементов вектора B" 
                          Style="{StaticResource TextStyle}"/>

				<!-- Кнопка закрытия -->
				<Button Content="Закрыть" Width="100" Height="30" 
                       Click="CloseButton_Click" 
                       Background="#2C5F9E" 
                       Foreground="White"
                       BorderThickness="0"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center"/>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>