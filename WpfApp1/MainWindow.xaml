<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Калькулятор" Height="550" Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2C5F9E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="6"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter x:Name="contentPresenter" 
                                            ContentTemplate="{TemplateBinding ContentTemplate}"
                                            Content="{TemplateBinding Content}"
                                            ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A6DB0"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#30000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E4A7A"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#B0B0B0"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C5F9E"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#f0f5fc" Offset="0.0" />
            <GradientStop Color="#e8eff8" Offset="0.4" />
            <GradientStop Color="#dde6f2" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Ellipse Width="250" Height="250" Opacity="0.04" Fill="#2C5F9E" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-80,-80"/>
        <Ellipse Width="180" Height="180" Opacity="0.04" Fill="#2C5F9E" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="-60,-60"/>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,30">
                <TextBlock Text="Численные методы" 
                          FontSize="32" 
                          FontWeight="Light" 
                          Foreground="#2C5F9E" 
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">

                    <Button Content="Метод дихотомии" 
                            Style="{StaticResource ModernButton}"
                            Click="Button_ClickDichotomy"
                            Margin="0,0,0,12"/>

                    <Button Content="Решение СЛАУ" 
                            Style="{StaticResource ModernButton}"
                            Click="Button_ClickSLAE"
                            Margin="0,0,0,12"/>

                    <Button Content="Метод золотого сечения" 
                            Style="{StaticResource ModernButton}"
							Click="Button_ClickGolden"
                            Margin="0,0,0,12"/>

                    <Button Content="Метод Ньютона" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Margin="0,0,0,12"/>
                </StackPanel>

                <StackPanel Grid.Column="2">

                    <Button Content="Метод покоординатного спуска" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Margin="0,0,0,12"/>

                    <Button Content="Метод наименьших квадратов" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Margin="0,0,0,12"/>

                    <Button Content="Олимпиадные сортировки" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Margin="0,0,0,12"/>

                    <Button Content="Решение интеграла" 
                            Style="{StaticResource ModernButton}"
                            IsEnabled="False"
                            Margin="0,0,0,12"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,10">
                <TextBlock Text="Выберите метод для решения" 
                          FontSize="12" 
                          Foreground="#888" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Активные методы выделены цветом" 
                          FontSize="10" 
                          Foreground="#AAA" 
                          HorizontalAlignment="Center"
                          Margin="0,3,0,0"/>
                <TextBlock Text="Фенько Андрей 2025г." 
                          FontSize="8" 
                          Foreground="#AAA" 
                          HorizontalAlignment="Center"
                          Margin="0,3,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>